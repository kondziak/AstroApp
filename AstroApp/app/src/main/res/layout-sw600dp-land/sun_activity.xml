<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sunFrame"
    tools:context="fragments.Sun">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/Sun_Moon"
        android:src="@drawable/sun" />

    <TextView
        android:id="@+id/firstView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="40dp"
        android:text="@string/sunrise"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secondView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="80dp"
        android:text="@string/sunset"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thirdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="120dp"
        android:text="@string/twilight_evening"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fourthView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="160dp"
        android:text="@string/twilight_morning"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/firstAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="40dp"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secondAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="80dp"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thirdAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="380dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="120dp"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fourthAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="380dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="160dp"
        android:textSize="26sp"
        android:textStyle="bold" />

</FrameLayout>