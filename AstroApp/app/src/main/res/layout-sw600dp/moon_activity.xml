<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/moonFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.Moon">

    <ImageView
        android:id="@+id/moonView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/Sun_Moon"
        android:src="@drawable/moon" />

    <TextView
        android:id="@+id/moonriseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:text="@string/moonrise"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moonsetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:text="@string/moonset"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newMoonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:text="@string/new_moon"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fullMoonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"
        android:text="@string/full_moon"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lunarPhaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:text="@string/lunar_phase"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lunarDayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="80dp"
        android:text="@string/day_month_lunar"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moonriseField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="150dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moonsetField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="200dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newMoonField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="250dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fullMoonField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="300dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lunarPhaseField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lunarDayField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="360dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="80dp"
        android:textSize="24sp"
        android:textStyle="bold" />
</FrameLayout>