<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.Moon">

    <ImageView
        android:id="@+id/moonView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/Sun_Moon"
        android:src="@drawable/moon" />

    <TextView
        android:id="@+id/moonriseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="30dp"
        android:text="@string/moonrise"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moonsetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:text="@string/moonset"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newMoonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="160dp"
        android:text="@string/new_moon"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fullMoonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:text="@string/full_moon"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lunarPhaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="240dp"
        android:text="@string/lunar_phase"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lunarDayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="240dp"
        android:text="@string/day_month_lunar"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moonriseField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="70dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moonsetField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="120dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newMoonField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="160dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fullMoonField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="200dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lunarPhaseField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="240dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lunarDayField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="400dp"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="240dp"
        android:textSize="20sp"
        android:textStyle="bold" />
</FrameLayout>